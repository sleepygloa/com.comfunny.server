<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.comfunny.server.proj.sd.repository.LocDao">
	<!-- 관련테이블
	
	SD_AREA : 지역
	SD_ZONE : 구역
	SD_LOC : 위치
	SD_FIXLOC : 고정위치
	-->
<!--
	&lt;!&ndash; 지역 조회 ============================================================================ &ndash;&gt;
	<select id="selectAreaList" parameterType="map" resultType="egovMap">
        <![CDATA[
			SELECT A.AREA
			     , A.DC
			     , (SELECT DCNM FROM SD_DC WHERE DC = A.DC AND BIZ = A.BIZ)	AS DCNM
			     , A.BIZ
			     , A.AREANM
			     , A.VTAREAYN
			     , A.PUTWPRIORT
			     , A.PICKPRIORT
			     , A.ERPCD
			     , A.USEYN
			     , A.RGSDE
			     , A.RGSUSR
			     , A.UPDDE
			     , A.UPDUSR
			     , A.EXTCOL01
			     , A.EXTCOL02
			     , A.EXTCOL03
			     , A.EXTCOL04
			     , A.EXTCOL05
			  FROM SD_AREA A
			 WHERE A.BIZ = #{biz}
			   AND A.DC = #{dc}
        ]]>
		<if test="popupParam != null and popupParam != ''">
			   AND (AREA LIKE '%' + UPPER(#{popupParam}) + '%'
			    OR  AREANM LIKE '%' + UPPER(#{popupParam}) + '%')
		</if>
	</select>

	&lt;!&ndash; 구역 조회 ============================================================================ &ndash;&gt;
	<select id="selectZoneList" parameterType="map" resultType="egovMap">
        <![CDATA[
			SELECT ZONE
			     , A.DC
			     , (SELECT DCNM FROM SD_DC WHERE DC = A.DC AND BIZ = A.BIZ)	AS DCNM
			     , A.BIZ
			     , B.AREA
			     , B.AREANM
			     , A.ZONENM
			     , A.UOS
			     , A.SKUTY
			     , A.TRETTY
			     , A.TPTP
			     , A.GRAD
			     , A.RCPTYN
			     , A.STRGYN
			     , A.RPSHYN
			     , A.PICKYN
			     , A.WORKYN
			     , A.ODERYN
			     , A.XDOCKRCPTYN
			     , A.XDOCKODERYN
			     , A.PUTWPRIORT
			     , A.PICKPRIORT
			     , A.EQP
			     , A.ERPCD
			     , CASE B.USEYN WHEN 'N' THEN 'N' ELSE A.USEYN END AS USEYN 
			     , A.RGSDE
			     , A.RGSUSR
			     , A.UPDDE
			     , A.UPDUSR
			     , A.EXTCOL01
			     , (SELECT ZONENM FROM SD_ZONE WHERE ZONE = A.EXTCOL01 AND BIZ=A.BIZ AND DC=A.DC  ) AS EXTCOL01NM
			     , A.EXTCOL02
			     , A.EXTCOL03
			     , A.EXTCOL04
			     , A.EXTCOL05
			  FROM SD_ZONE A
			     , SD_AREA B
			 WHERE A.AREA = B.AREA
			   AND A.BIZ = B.BIZ
			   AND A.DC = B.DC
		
			   AND A.BIZ = #{biz}
			   AND A.DC = #{dc}
		]]>
		<if test="area != null and area != ''">
			   AND B.AREA = #{area}
		</if>	
		<if test="zone != null and zone != ''">
			   AND (A.ZONE LIKE '%' +  UPPER(#{zone}) + '%'
			    OR  A.ZONENM LIKE '%' + UPPER(#{zone}) + '%')
		</if>	
		<if test="popupParam != null and popupParam != ''">
			   AND (A.ZONE LIKE '%' + UPPER(#{popupParam}) + '%'
			    OR  A.ZONENM LIKE '%' + UPPER(#{popupParam}) + '%')
		</if>
		<![CDATA[   
	        ORDER BY B.AREA, A.ZONE
		]]>	
	</select>

	&lt;!&ndash; 위치 조회 ============================================================================ &ndash;&gt;
	<select id="selectLocList" parameterType="map" resultType="egovMap">
        <![CDATA[
			SELECT B.AREA
			     , (SELECT AREANM FROM SD_AREA WHERE AREA=B.AREA AND BIZ=B.BIZ AND DC=B.DC) AS AREANM
			     , A.LOC
			     , A.DC
			     , (SELECT DCNM FROM SD_DC WHERE DC = A.DC AND BIZ = A.BIZ)	AS DCNM
			     , A.BIZ
			     , B.ZONE
			     , B.ZONENM
			     , A.LOCNM
			     , A.LOCROW
			     , A.LOCCOL
			     , A.LOCSTG
			     , A.LT
			     , A.BT
			     , A.HG
			     , A.STRGCPCTY
			     , A.STRGWT
			     , A.STRGPLTQTY
			     , A.PUTWPRIORT
			     , A.PICKPRIORT
			     , A.CLIENTMIXYN
			     , A.SKUCTGRMIXYN
			     , A.SKUMIXYN
			     , A.LOTMIXYN
			     , A.ERPCD
			     , A.USEYN
			     , A.RGSDE
			     , A.RGSUSR
			     , A.UPDDE
			     , A.UPDUSR
			     , A.EXTCOL01
			     , A.EXTCOL02
			     , A.EXTCOL03
			     , A.EXTCOL04
			     , A.EXTCOL05
			  FROM SD_LOC A
			     , SD_ZONE B
			 WHERE A.BIZ = B.BIZ
    	       AND A.DC = B.DC 
	           AND A.ZONE = B.ZONE
	           AND B.USEYN = 'Y'
	           
         	   AND A.BIZ = #{biz}
			   AND A.DC = #{dc}
		]]>
		<if test="area != null and area != ''">
			   AND B.AREA = #{area}
		</if>
		<if test="zone != null and zone != ''">
			   AND A.ZONE = #{zone}
		</if>
		<if test="loc != null and loc != ''">
			   AND (A.LOC LIKE '%' + UPPER(#{loc}) + '%'
			    OR  A.LOCNM LIKE '%' + UPPER(#{loc}) + '%')
		</if>
		<if test="popupParam != null and popupParam != ''">
			   AND (A.LOC LIKE '%' + UPPER(#{popupParam}) + '%'
			    OR  A.LOCNM LIKE '%' + UPPER(#{popupParam}) + '%')
		</if>
		<![CDATA[   
	        ORDER BY B.AREA, B.ZONE, A.LOC
		]]>	
	</select>
	
	&lt;!&ndash; 지역공통코드 조회 ============================================================================ &ndash;&gt;
	<select id="selectAreaCdList" parameterType="map" resultType="egovMap">
		<![CDATA[
			SELECT A.AREA   AS CD       /* 지역코드 */
			     , A.AREANM AS CDNM     /* 지역명 */
			     , A.DC     AS EXTCOL01 /* 확장컬럼1(물류센터) */
			     , ''       AS EXTCOL02 /* 확장컬럼2 */
			     , ''       AS EXTCOL03 /* 확장컬럼3 */
			     , ''       AS EXTCOL04 /* 확장컬럼4 */
			     , ''       AS EXTCOL05 /* 확장컬럼5 */
			  FROM SD_AREA A
			 WHERE A.BIZ = #{biz}
			 ORDER BY A.AREA
		]]>
	</select>
	
	&lt;!&ndash; 구역공통코드 조회 ============================================================================ &ndash;&gt;
	<select id="selectZoneCdList" parameterType="map" resultType="egovMap">
		<![CDATA[
			SELECT A.ZONE   AS CD       /* 구역코드 */
			     , A.ZONENM AS CDNM     /* 구역명 */
			     , A.DC     AS EXTCOL01 /* 확장컬럼1(물류센터) */
			     , ''       AS EXTCOL02 /* 확장컬럼2 */
			     , ''       AS EXTCOL03 /* 확장컬럼3 */
			     , ''       AS EXTCOL04 /* 확장컬럼4 */
			     , ''       AS EXTCOL05 /* 확장컬럼5 */
			  FROM SD_ZONE A
			 WHERE A.BIZ = #{biz}
			 ORDER BY A.ZONE
		]]>
	</select>
	
	&lt;!&ndash; 로케이션의 구역, 지역 조회 조회 ============================================================================ &ndash;&gt;
	<select id="selectAreaZoneForLoc" parameterType="map" resultType="egovMap">
		<![CDATA[
			SELECT B.AREA
			     , B.ZONE
			     , A.LOC
			     , A.EXTCOL01 
			  FROM SD_LOC A
			     , SD_ZONE B
			 WHERE A.BIZ   = B.BIZ
    	       AND A.DC    = B.DC 
	           AND A.ZONE  = B.ZONE
	           AND B.USEYN = 'Y'
	           
         	   AND A.BIZ   = #{biz}
			   AND A.DC    = #{dc}
			   AND A.LOC   = #{loc}
		]]>
	</select>-->
</mapper>